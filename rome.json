{
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentSize": 4,
        "lineWidth": 80,
        "ignore": ["pnpm-lock.yaml"]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "suspicious": {
                "noExplicitAny": "off"
            }
        },
        "ignore": ["node_modules", "dist", "pnpm-lock.yaml"]
    },
    "vcs": {
        "useIgnoreFile": true
    }
}
